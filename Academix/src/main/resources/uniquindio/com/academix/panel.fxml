<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #f5f6fa;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uniquindio.com.academix.Controller.PanelController">
    <VBox spacing="20" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <!-- Encabezado -->
        <HBox alignment="CENTER" style="-fx-background-color: #1e88e5; -fx-padding: 20;">
            <Label text="Panel del Estudiante" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>
        </HBox>

        <!-- Contenido Principal -->
        <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
            <VBox spacing="20" style="-fx-padding: 20;">
                <!-- Sección de Contenidos Publicados -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                    <Label text="Mis Contenidos Publicados" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #1e88e5;"/>
                    <ListView fx:id="contenidosListView" prefHeight="200.0" style="-fx-background-radius: 5;"/>
                    <Button fx:id="nuevoContenidoBtn" text="Nuevo Contenido" style="-fx-background-color: #1e88e5; -fx-text-fill: white;" onAction="#onNuevoContenido"/>
                </VBox>

                <!-- Sección de Valoraciones -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                    <Label text="Mis Valoraciones" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #1e88e5;"/>
                    <GridPane vgap="10" hgap="10">
                        <Label text="Valoración promedio:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Label fx:id="valoracionPromedioLabel" text="4.5 ★" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    </GridPane>
                    <ListView fx:id="valoracionesListView" prefHeight="150.0" style="-fx-background-radius: 5;"/>
                </VBox>

                <!-- Sección de Sugerencias -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                    <Label text="Sugerencias" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #1e88e5;"/>
                    <TextArea fx:id="sugerenciaTextArea" promptText="Escribe una sugerencia..." prefHeight="100.0"/>
                    <Button fx:id="enviarSugerenciaBtn" text="Enviar Sugerencia" style="-fx-background-color: #1e88e5; -fx-text-fill: white;" onAction="#onEnviarSugerencia"/>
                </VBox>

                <!-- Sección de Solicitudes de Ayuda -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                    <Label text="Solicitudes de Ayuda" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #1e88e5;"/>
                    <ComboBox fx:id="categoriaComboBox" promptText="Selecciona una categoría" prefWidth="200.0"/>
                    <TextArea fx:id="solicitudTextArea" promptText="Describe tu solicitud de ayuda..." prefHeight="100.0"/>
                    <Button fx:id="enviarSolicitudBtn" text="Solicitar Ayuda" style="-fx-background-color: #1e88e5; -fx-text-fill: white;" onAction="#onEnviarSolicitud"/>
                    <ListView fx:id="solicitudesListView" prefHeight="150.0" style="-fx-background-radius: 5;"/>
                </VBox>
            </VBox>
        </ScrollPane>
    </VBox>
</AnchorPane>
