<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<BorderPane fx:id="rootPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="uniquindio.com.academix.Controller.DashboardController"
            prefHeight="805.0" prefWidth="1274.0"
            minHeight="0.0" minWidth="0.0"
            maxHeight="-1.0" maxWidth="-1.0">

    <top>
        <HBox spacing="40.0" style="-fx-background-color: white; -fx-padding: 20 40;" HBox.hgrow="ALWAYS">
            <children>
                <Label style="-fx-font-size: 24px; -fx-text-fill: #1d4ed8; -fx-font-weight: bold;" text="Académix" />
                <Pane HBox.hgrow="ALWAYS" />
                <Hyperlink fx:id="inicioLink" onAction="#goToInicio" text="Inicio" />
                <Hyperlink fx:id="panelLink" onAction="#goToPanel" text="Panel del Estudiante" />
                <Hyperlink fx:id="gruposLink" onAction="#goToGrupos" text="Grupos" />
                <Hyperlink fx:id="sugerenciasLink" onAction="#goToSugerencias" text="Sugerencias" />
                <Hyperlink fx:id="mensajeriaLink" onAction="#goToMensajeria" text="Mensajería" />
                <Label fx:id="IDcorreoEst" style="-fx-text-fill: #6b7280; -fx-font-size: 12px;" />
            </children>
        </HBox>
    </top>

    <!-- Aquí no colocas nada en el center, queda vacío para cargar las vistas -->
</BorderPane>
