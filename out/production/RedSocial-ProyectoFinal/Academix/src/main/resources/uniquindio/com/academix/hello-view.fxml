<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controlador.LoginController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">

    <Label text="Iniciar Sesión" style="-fx-font-size: 20;" />
    <TextField fx:id="campoUsuario" promptText="Usuario" />
    <PasswordField fx:id="campoContrasena" promptText="Contraseña" />
    <Button text="Iniciar Sesión" onAction="#iniciarSesion" />
    <Label fx:id="mensajeError" textFill="red" />
</VBox>

